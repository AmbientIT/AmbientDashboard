{
	"passPerPreset": true,
  "plugins": [ "transform-decorators-legacy" ],
	"presets": [
		{ "plugins": [ "transform-runtime", "system-import-transformer" ] },
		{
			"passPerPreset": false,
			"presets": [ "es2015-node6", "stage-1", "react" ]
		},
	],
  "env": {
    "test": {
      "plugins": [
        ["istanbul"]
      ]
    },
    "production": {
      "plugins": ["source-map-support"]
    }
  },
  "ignore": [
    "src/public/*"
  ],
  "sourceMaps": "both"
}
