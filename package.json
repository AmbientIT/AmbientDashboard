{
  "name": "koa2-starter",
  "private": true,
  "version": "0.0.1",
  "description": "A boilerplate for writing Koa 2 apps in ES7 with Babel and Node 6.",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "node dist/bin/start.js",
    "build": "babel src -d dist -s",
    "dev": "nodemon src/bin/start.js",
    "debug": "icebug src/bin/start.js",
    "test": "mocha --require test/_helpers test/**/*.spec.js --compilers js:babel-register -R dot --timeout 5000",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src/ test/",
    "lint:watch": "esw -w src/ test/",
    "cover": "cross-env NODE_ENV=test nyc npm test"
  },
  "author": "Charles Jacquin",
  "license": "MIT",
  "dependencies": {
    "@risingstack/graffiti": "^3.1.1",
    "@risingstack/graffiti-mongoose": "^5.2.1",
    "awilix": "^2.2.1",
    "awilix-koa": "^0.1.1",
    "bristol": "^0.3.3",
    "glob": "^7.0.6",
    "graphiql": "^0.7.8",
    "graphql": "^0.7.0",
    "isomorphic-fetch": "^2.2.1",
    "kcors": "^1.2.1",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-compose": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-logger": "^2.0.0",
    "koa-respond": "^1.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.0.2",
    "lodash": "^4.15.0",
    "mongoose": "^4.5.10",
    "palin": "^2.1.0",
    "pug": "^2.0.0-beta6",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "source-map-support": "^0.4.2",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "app-module-path": "^1.1.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-source-map-support": "0.0.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^2.0.1",
    "css-loader": "^0.24.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-require-in-package": "^1.0.3",
    "eslint-plugin-standard": "^2.0.0",
    "eslint-watch": "^2.1.14",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "icebug": "^0.1.6",
    "isomorphic-style-loader": "^1.0.0",
    "json-loader": "^0.5.4",
    "koa-connect": "^1.0.0",
    "koa-webpack-hot-middleware": "^1.0.3",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "nyc": "^8.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "source-map-loader": "^0.1.5",
    "supertest": "^2.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.13",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-merge": "^0.14.1",
    "yargs": "^5.0.0"
  },
  "directories": {
    "test": "test"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
